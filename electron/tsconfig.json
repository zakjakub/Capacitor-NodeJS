{
    "extends": "../configs/strict",
    "compilerOptions": {
        "lib": [ "dom", "ESNext" ],
        "module": "NodeNext",
        "target": "ESNext",

        "declaration": true,
        "sourceMap": true,
        "outDir": "build",

        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "importHelpers": true,

        "pretty": true,
    },
    "include": [
        "src/**/*"
    ]
}
